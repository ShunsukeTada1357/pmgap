#!/usr/bin/env bash

PROGNAME="${0##*/}"
usage() {
		echo "$PROGNAME"
		echo "  Computes whether or not a commutative grid representation"
    echo "  is interval-decomposable."		
		echo ""
		echo "WARNINGS:"
		echo " 1. This script uses very general algorithms, and is not the most efficient"
		echo "    way of determining interval-decomposability. DO NOT USE WITH LARGE INPUT."		
    echo ""
		echo "USAGE:"
		echo " $PROGNAME [-ah] [-c <orientation>] <input>"		
		echo "  -h                 Show this help."
		echo "  <input>            Input containing data about persistence module to decompose."
		echo ""
		echo "INPUT:"
		echo "  The expected input is a json file containing the representation."
		echo "  While this can be manually created, this program is created with the"
		echo "  idea of taking the output from pmgap program 'cmplx2repn'."
		echo ""
		echo "This program is distributed in the hope that it will be useful,"
    echo "but WITHOUT ANY WARRANTY; without even the implied warranty of"
    echo "MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the"
    echo "GNU General Public License for more details."
}

# [ $# -eq 0 ] && usage

while getopts "h" o; do
		case "${o}" in		     
				h | *) # Display help.
						usage
						exit 0
						;;
		esac
done

shift $((OPTIND-1))

if [ -z "$1" ]; then
		echo "Error: No input supplied. Run again with option -h to show help."
		exit 1
fi

if [ ! -f  @gapscriptsdir@/loader.g ]; then
		echo "ERROR: pmgap library loader script not found! Expected:"
		echo "@gapscriptsdir@/loader.g"
		echo "Check your pmgap installation."
		exit 1
fi

echo "V:=JsonFileToCommGridRepn("'"'"$1"'"'");;Display(DimensionVector(V));Display(IsIntervalDecomposable(V));"  | gap -o 8G -q  @gapscriptsdir@/loader.g
