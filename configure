#!/bin/bash
# usage: configure gappath
# this script creates a `Makefile' from `Makefile.in'

if test -z $1; then
  echo "Autodetecting GAP path by querying gap";
  GAPPATH=`echo "Print(GAPInfo.RootPaths[Length(GAPInfo.RootPaths)]);" | gap -q -r | tr -d '\r'`;
else 
  GAPPATH=$1; 
fi

echo "Looking for $GAPPATH/sysinfo.gap ...";
if ! test -e "$GAPPATH/sysinfo.gap"; then
  echo "Please give correct GAP path as argument (and make sure that GAP"
  echo "is already properly installed)."
  exit
fi
echo "OK!";

. $GAPPATH/sysinfo.gap
sed -e "s|@GAPARCH@|$GAParch|g" -e "s|@GAPCXX@|$GAP_CXX|g" Makefile.in > Makefile
echo "Makefile successfully created."